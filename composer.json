{
    "name":                                             "najaram/najaram",
    "license":                                          "MIT",
    "type":                                             "project",
    "description":                                      "Najaram CMS Blog",
    "autoload": {
        "psr-4": {
            "AppBundle\\":                              "src/AppBundle/",
            "Najaram\\Bundle\\":                         "src/",
            "Najaram\\":                                 "lib/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "require": {
        "symfony/symfony":                              "2.8.*",
        "doctrine/orm":                                 "^2.4.8",
        "doctrine/doctrine-bundle":                     "~1.4",
        "symfony/swiftmailer-bundle":                   "~2.3",
        "symfony/monolog-bundle":                       "~2.4",
        "sensio/distribution-bundle":                   "~5.0",
        "sensio/framework-extra-bundle":                "^3.0.2",

        "doctrine/doctrine-cache-bundle":               "^1.3",
        "doctrine/doctrine-migrations-bundle":          "^1.1",
        "ramsey/uuid":                                  "^3.0",
        "ramsey/uuid-doctrine":                         "^1.0",

        "friendsofsymfony/user-bundle":                 "^2.0",

        "league/commonmark":                            "^0.13",
        "league/commonmark-extras":                     "^0.1",
        "webuni/commonmark-table-extension":            "^0.4",
        "webuni/commonmark-attributes-extension":       "^0.3",

        "atst/stack-backstage":                         "~1.0",
        "darsyn/stack-ip-restrict":                     "^1.0.2",
        "darsyn/stack-request-id":                      "^1.0",
        "stack/builder":                                "~1.0",

        "incenteev/composer-parameter-handler":         "^2.0",
        "vlucas/phpdotenv":                             "~1.1",
        "php":                                          ">=5.6"
    },
    "autoload-dev": {
        "psr-4": {
            "AppBundle\\Tests\\": "tests/AppBundle/",
            "Najaram\\Bundle\\": "tests/",
            "Najaram\\": "tests/"
        }
    },
    "require-dev": {
        "sensio/generator-bundle":                      "~3.0",
        "symfony/phpunit-bridge":                       "~2.7",
        "phpunit/phpunit":                              "^5.0",
        "doctrine/doctrine-fixtures-bundle":            "^2.3",
        "php-vcr/php-vcr":                              "@stable",
        "mikey179/vfsStream":                           "@stable",
        "squizlabs/php_codesniffer":                    "2.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "minimum-stability":                                "dev",
    "prefer-stable":                                    true,
    "config": {
        "bin-dir": "bin",
        "prefer-dist":                                  true
    },
    "extra": {
        "symfony-app-dir":                              "app",
        "symfony-bin-dir":                              "bin",
        "symfony-var-dir":                              "var",
        "symfony-web-dir":                              "web",
        "symfony-tests-dir":                            "tests",
        "symfony-assets-install":                       "relative",
        "incenteev-parameters": {
            "file":                                     "app/config/parameters.yml"
        }
    }
}
